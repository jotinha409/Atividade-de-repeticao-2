import java.util.Scanner;

public class Exercicio21 {
    public void executarExercicio21(Scanner input) {

        System.out.println("Iniciando execução do exercicio 21 -- Triângulo");

        System.out.print("Digite o valor do lado A: ");
        double A = input.nextDouble();
        System.out.println("Informe um valor válido!");
        
        System.out.print("Digite o valor do lado B: ");
        double B = input.nextDouble();

        System.out.print("Digite o valor do lado C: ");
        double C = input.nextDouble();

        if (A < B + C && B < A + C && C < A + B) {
            System.out.println("Condição de existência de um triângulo");
            System.out.printf("Os valores %.2f, %.2f e %.2f representam os lados de um triângulo\n", A, B, C);
        } else {
            System.out.printf("Triângulo inexistente! Os valores %.2f, %.2f e %.2f não representam os lados de um triângulo\n", A, B, C);
        }
    }
}

